<!DOCTYPE html>
<html>
<head>
  <title>Pixie!</title>
  <style>
    body{
      text-align: center;
      background: url(http://media-cache-ec0.pinimg.com/736x/b1/06/79/b1067949f57e122be03d1394a60ed8f0.jpg);
      /*background: url(http://farm4.staticflickr.com/3740/12007847285_ff7561e445_o.jpg);*/
      background-size: cover;
      background-position: center;  
    }
    p {
      color: white;
      font-family: helvetica;
      font-size: 22px;
    }
    #footer {
      color: white;
      font-family: helvetica;
      font-size: 18px;
      margin: auto;
      padding: 20px;
    }
    .garment_photo {
      position: relative;
      padding: 0;
      width:160px;
      display:block;
      border: 5px black solid;
      border-radius: 5px;
    }
    .garment_detail {
      position: absolute;
      margin:auto;
      padding: 10;
      color:black;
      font-size:20px;
      font-family: helvetica;
      background-color:#ee5a8e;
      width: 150px;
      height: 150px;
      text-align: center;
      opacity: 0;
      -webkit-transition: all 0.1s ease;
      -moz-transition: all 0.1s ease;
      -o-transition: all 0.1s ease;
      transition: all 0.1s ease;
    }
    .garment_detail:hover {
      opacity:0.8;
    }
    #social_media {
      font-size: 40px;
    }
    #fb:hover {
      color:#ee5a8e;
    }
    #twitter:hover {
      color:#ee5a8e;
    }
    #pin:hover {
      color:#ee5a8e;
    }
    #gplus:hover {
      color:#ee5a8e;
    }
    #tumblr:hover {
      color:#ee5a8e;
    }
    #weibo:hover {
      color:#ee5a8e;
    }
    #subscription_list {
      border: 0;
      border-radius: 3px;
      padding: 8px;
      font-size: 16px;"
    }
    #subscription_button {
      border: 0;
      border-radius: 3px;
      padding: 8px;
      font-size: 16px;
      background: red;
      color: white;
    }
    table {
      border-collapse: collapse;
    }
    td:hover {
      border-radius 20px;
      opacity: 0.85;
    }
    /*#lady:hover {
      color:#ffacc9;
      opacity: 0.9;
    }
    #summer:hover {
      color:#ffcf00;
      opacity: 0.9;
    }
    #autumn:hover {
      color:#d5ebc2;
      opacity: 0.9;
    }
    #gentleman:hover {
      color:#ff968f;
      opacity: 0.9;
    }*/
  </style>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
  
</head>
 <body>
    <div class="navbar-wrapper">
      <div class="container">

        <div class="navbar navbar-inverse navbar-static-top" role="navigation">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <!--class="navbar-brand"-->
              <%= link_to image_tag('http://farm3.staticflickr.com/2807/12008497393_013526c50b_o.jpg'), root_path %>
            </div>
            <div class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
                <!-- <li class="active"> -->
                <li><%= link_to I18n.t('helpers.navbar.home'), root_path %></li>
                <li><%= link_to I18n.t('helpers.navbar.collection'), collection_index_path %></li>
                <li><%= link_to I18n.t('helpers.navbar.about_us'), about_path %></li>
                <li><%= link_to I18n.t('helpers.navbar.contact'), contact_path %></li>
                 <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Collection<b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><a href="#">Baby Boy</a></li>
                    <li><a href="#">Baby Girl</a></li>
                    <li class="divider"></li>
                    <li><a href="#">Kiddie Boy</a></li>
                    <li><a href="#">Mini Girl</a></li>
                  </ul>
                <% if current_user %>
                <li><%= link_to I18n.t('helpers.navbar.sign_out'), destroy_user_session_path, method: :delete %></li>
                <% else %>
                <li><%= link_to I18n.t('helpers.navbar.sign_in'), new_user_session_path %>
                <li><%= link_to I18n.t('helpers.navbar.sign_in_with'), user_omniauth_authorize_path(:facebook) %></li>
                <% end %>
                <li><ul class="nav navbar-nav pull-right">
                    <li><%= link_to "English", root_path(locale: "en") %></li>
                    <li><%= link_to "中文版", root_path(locale: "zh-CN") %></li>
                    </ul>
                </li>
                <li><a style="font-size: 18px;" href="/"><i class="fa fa-shopping-cart"></i></a></li>
              </ul>
            </div>
  
          </div>
        </div>

      </div>
    </div>


    <div class="container">
      <%= yield %>
    </div>


      <!-- FOOTER -->
       <footer>
        <%= form_for :subscription, url: subscriptions_path do |f| %>
        <%= f.text_field :email, placeholder: I18n.t('helpers.placeholder.sub'), id: "subscription_list" %>
        <%= f.submit I18n.t('helpers.placeholder.submit'), id: "subscription_button" %>
        <% end %>
       <!--  <input style="border: 0;border-radius: 3px;padding: 8px;font-size: 16px;background: red;color: white;" type="submit"> -->
        <br/>
        <br/>
        <br/>
        <p id="social_media"><i class="fa fa-facebook-square" id="fb"></i>  <i class="fa fa-twitter" id="twitter"></i>  <i class="fa fa-pinterest-square" id="pin"></i>  <i class="fa fa-google-plus-square" id="gplus"></i>  <i class="fa fa-tumblr-square" id="tumblr"></i>  <i class="fa fa-weibo" id="weibo"></i></p>
        <br/>
        <p id="footer">&copy; 2014 Pixie Unlimited. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
      </footer>

    </div><!-- /.container -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="../../dist/js/bootstrap.min.js"></script>
    <script src="../../docs-assets/js/holder.js"></script>

  </body>
</html>

